pipeline {
    agent any

    stages {
        stages {
        stage("Git Checkout") {
            steps {
                git url: 'https://github.com/gaurang153/AutoOutreach.git', branch: 'jenkins'
            }
        }
        stage('Stage 1: Run Scrapping tool') {
            environment {
                ENV_FILE = './config/.env.sc'
            }
            steps {
                script {
                    sh """
                    docker compose down
                    docker compose --env-file ${ENV_FILE} up
                    docker compose down
                    """
                }
            }
        }
        stage('Stage 2: Run DM Tool') {
            environment {
                ENV_FILE = './config/.env.dm'
            }
            steps {
                script {
                    sh """
                    docker compose down
                    docker compose --env-file }${ENV_FILE} up
                    docker compose down
                    """
                }
            }
        }
    }
}