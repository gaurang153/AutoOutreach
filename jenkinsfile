pipeline {
    agent any

        stages {
        stage('Git Checkout') {
            steps {
                git url: 'https://github.com/gaurang153/AutoOutreach.git', branch: 'jenkins'
            }
        }
        stage('docker build') {
            steps {
                sh '''
                docker build -t autooutreach:latest .
                '''
            }
        }
        stage('Stage 1: Run Scrapping tool') {
            options {
                timeout(time: 5, unit: 'MINUTES')
            }
            environment {
                ENV_FILE = './.env.sc'
            }
            steps {
                script {
                    sh """
                    docker compose down
                    docker compose --env-file ${ENV_FILE} up
                    docker compose down
                    """
                }
            }
        }
        stage('Stage 2: Run DM Tool') {
            environment {
                ENV_FILE = './.env.dm'
            }
            steps {
                script {
                    sh """
                    docker compose down
                    docker compose --env-file }${ENV_FILE} up
                    docker compose down
                    """
                }
            }
        }
        }
}
